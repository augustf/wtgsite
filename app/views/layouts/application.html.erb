<!DOCTYPE html>
<html>
<head>
  	<title><%= controller.controller_name.capitalize %> - Our Website</title>
   	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag :ckeditor %>
	
	<!--[if lt IE 9]>
	<%= javascript_include_tag "html5.js" %>
	<![endif]-->
</head>
<body>
	<header>
		<%= render :partial => "includes/login" %>
		<%= link_to image_tag("your_logo_here.png", :alt => "The Logo", :title => "Home"), frontpage_path %>
	</header>
	<% if flash[:notice] %>
		<p id="flashblock"><%= flash[:notice] %></p>
	<% end %>
	
	<article>
		<%= yield %>
	</article>
	
	<footer>
		<% if !current_user %>
		<ul>
			<li><%= link_to "Register", new_user_path %></li>
			<li><%= link_to "Login", login_path %></li>
		</ul>
		<% end %>
	</footer>
</body>
</html>

