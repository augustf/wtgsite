<h1>Columns List</h1>
<ul>
	<% @columns.each do |column| %>
	<li><%= column.name %> <% if current_user %>(<%= link_to "Edit", edit_column_path(column) %>, <%= link_to "Delete", column, :confirm => 'Are you sure you want to delete this column?', :method => :delete %>)<% end %></li>
	<% end %>
</ul>

<% if current_user %>
<ul>
	<li><%= link_to "Create New Column", new_column_path %></li>
</ul>
<% end %>
