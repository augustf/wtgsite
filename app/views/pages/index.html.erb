<div class="cell_full">
	<div class="cell_full-top"><div class="cell_full-top-padding"><h1><small><%= link_to "Home", :controller => "frontpage" %> > </small>All Pages</h1></div></div>
	<div class="cell-padding cell-padding_full">
		<div class="indent-1">
			
		  <div class="grayround_box">
	   		<div class="grayround_top"><div></div></div>
	      	<div class="grayround_cont"><%= link_to "Create New Page", :controller => 'pages', :action => 'new', :anchor => 'content-padding' %></div>
	   		<div class="grayround_bot"><div></div></div>
			</div>
		  
		  <table class="admin" border="0" cellpadding="0" cellspacing="0" width="100%">
		    <tr>
		      <th>Page Title</th>
		      <th>URL</th>
		      <th><center>Operations</center></th>
		    </tr>
		    <% @pages.each do |page| %>
		    <tr class="<%= cycle('list_odd', 'list_even') %>">
		      <td><%= link_to page.title, :controller => 'pages', :action => 'show', :id => page %></td>
		      <td>/pages/show/<%= page.id %></td>
		      <td width="200">
		      	<center>
		      	<% if current_user %>
			       <div class="grayround_box">
			         <div class="grayround_top"><div></div></div>
			           <div class="grayround_cont"><%= link_to "Edit Page", { :action => 'edit', :id => page.id } %>&nbsp;&nbsp;&nbsp;<%= link_to "Delete", page, :confirm => 'Are you sure you want to delete this page?', :method => :delete %></div>
			         <div class="grayround_bot"><div></div></div>
			       </div>
			       <% end %>
			       </center>
		      </td>
		    </tr>
		    <% end %>
		  </table>

		</div>
	</div>
</div>