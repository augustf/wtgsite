<%= form_for(@page, :html => { :class => 'cmxform', :multipart => true}) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<fieldset>
		<ol>
			<li><%= f.label :title %> <%= f.text_field :title %></li>
			<li>
				<table cellpadding="0" cellspacing="0" width="100%">
					<tr valign="top">
						<td width="120"><%= f.label :html %></td>
						<td><%= ckeditor_textarea("page", "html", :width => '100%', :height => '200px') %></td>
					</tr>
				</table>
			</li>
			<li><%= f.label :image %> <%= f.file_field :image -%></li>
		</ol>
	</fieldset>
  <p class="submitbutton"><%= f.submit button_text %></p>
  
<% end %>
